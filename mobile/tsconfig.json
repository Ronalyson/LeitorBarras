{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["react", "react-native"]
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "android", "ios"]
}
